<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NumberInBurmese.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/puffin</item>
        <item name="colorPrimaryVariant">@color/radiant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/energy</item>
        <item name="colorSecondaryVariant">@color/android</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NumberInBurmese" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--ColorPrimary = ActionBar Colorl-->
        <item name="colorPrimary">@color/puffin</item>
        <item name="colorPrimaryVariant">@color/radiant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/energy</item>
        <item name="colorSecondaryVariant">@color/android</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Logo.Title.Theme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">cursive</item>
    </style>

    <style name="Number.Item" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SettingTextStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/status</item>
        <item name="android:textColor">@color/status</item>
        <item name="titleTextColor">@color/white</item>
    </style>
</resources>